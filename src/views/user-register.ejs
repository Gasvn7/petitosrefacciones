<%- include('./partials/head', {title: "Crea tu cuenta - Petitos Shop" }) %>
    <%- include('partials/header') %>
        <!----Formulario-Register-->
        <main class="main-register-login">
            <form action="/users" method="POST" enctype="multipart/form-data">
                <div class="container">
                    <h1>Registrarme</h1>
                    <p>Por favor completa el formulario para registrarte.</p>
                    <hr>

                    <label for="first-name"><b>¿Cuál es tu nombre?</b></label>
                    <input class="input" type="text" placeholder="Tu nombre" name="first-name" id="first-name" required>

                    <label for="last-name"><b>¿Cuál es tu apellido?</b></label>
                    <input class="input" type="text" placeholder="Tu apellido" name="last-name" id="last-name" required>

                    <label for="email"><b>Ingresa tu email</b></label>
                    <input class="input" type="email" placeholder="pepito@hotmail.com" name="email" id="email" required>

                    <label for="password"><b>Ingresa una contraseña</b></label>
                    <input class="input" type="password" placeholder="Tu contraseña" name="password" id="password"
                        required>

                    <label for="image"><b>Foto de perfil</b></label>
                    <input type="file" name="image" id="image">

                    <p>Al crearte una cuenta aceptas los <a href="#" style="color:dodgerblue">Términos y
                            condiciones.</a>
                    </p>

                    <div class="clearfix">
                        <button class="login-button" type="submit" name="register">
                            Crear cuenta
                        </button>
                        <a href="/users/login" class="register-button">
                            Iniciar sesión
                        </a>
                    </div>
                </div>
            </form>
        </main>
        <%- include('partials/footer') %>
            </body>

            </html>